<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
    <ItemGroup>
        <PathToDll Include="$(MSBuildProjectDirectory)\$(OutputPath)\$(AssemblyName).dll"/>
    </ItemGroup>
    <Target Name="UpdateConfigFilesAfterBuild" AfterTargets="PostBuildEvent">
        <Message Text="Start configuration files..." Importance="high" />
        <Message Text="The path to the assembly is '@(PathToDll)'" Importance="high" />
        <Error Condition="!Exists('@(PathToDll)')"
               Text="Flash.Configuration tool can not find library '($(AssemblyName).dll)'"
               File="@(PathToDll)"/>
        <Exec Command='"$(MSBuildThisFileDirectory)tools\Flash.Configuration.exe" --proj_path="$(MSBuildProjectDirectory)" --output_path="$(OutputPath)\" --assembly_name="$(AssemblyName).dll" --verbose=false'
              Condition="Exists('@(PathToDll)')"/>
        <Message Text="Finish updating configuration files" Importance="high" />
    </Target>
</Project>